---
import { type Option } from "@types";
const { options = [], slug } = Astro.props;
---

{options?.length > 0 && <span class="option-title">¿Qué quieres hacer?</span>}
{
  options.length > 0 ?
  <div class="flex gap-4 flex-wrap mt-8">
    {options.map((option: Option) => (
      <a class="rounded-full border-slate-900 border px-4 py-2" href={`/${slug}/${option.next}#contenido`}>{option.text}</a>
    ))}
  </div>
  : <span class="option-end w-full text-center block">¡Fin!</span>
}

<style>
  .option-title {
    font-size: clamp(1.5em,4vw + .5em,2.5em);
  }
  .option-end {
    font-size: clamp(2em,4vw + .5em,3em);
    font-weight: 700;
    color: var(--accent);
  }
</style>