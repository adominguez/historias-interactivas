---
import CardBook from "./CardBook.astro"
import { type LittleStory } from "@types"

const { bookList = [], showFilter } = Astro.props
---
{
  showFilter && (
    <div>Elegir tipo</div>
  )
}
<div class="wrapper-grid grid gap-4 z-20">
  {
    bookList.map(({ slug, title, created_at, resume, age, rating, rating_count: ratingCount }: LittleStory) => (
      <CardBook slug={slug} title={title} created_at={created_at} resume={resume} ratingCount={ratingCount} rating={rating} age={age} />
    ))
  }
</div>

<style>
  .wrapper-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }

  .link:hover {
    text-shadow: 0px 0px 10px #fff;
  }
</style>