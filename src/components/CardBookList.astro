---
import CardBook from "./CardBook.astro"

const { bookList } = Astro.props
---
<div>Elegir tipo</div>
<div class="wrapper-grid grid gap-4 z-20">
  {
    bookList.map(({ slug, title, created_at, description }) => (
      <CardBook slug={slug} title={title} created_at={created_at} description={description} />
    ))
  }
</div>

<style>
  .wrapper-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }

  .link:hover {
    text-shadow: 0px 0px 10px #fff;
  }
</style>